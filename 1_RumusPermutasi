#include <stdio.h>
 
int main()
{
	printf(" Nama		: Defri Crisna Pramudi \n ");
	printf("NPM		: 197006065 \n ");
	printf("Kelompok	: 5 \n ");
	printf("Program Menghitung Permutasi \n ");
	printf(" \n ");
    int n,p,x1=1,x2=1,hasil;
    printf("Masukan nilai n  : ");
    scanf("%d", &n);
    printf("Masukan nilai p : ");
    scanf("%d", &p);
    for(int i=1;i<=n;i++){
        x1=x1*i;
    }
    for(int i=1;i<=n-p;i++){
        x2=x2*i;
    }
 
    //rumus permutasi
    hasil=x1/x2;
    printf("Nilai Kombinasi %d diambil %d adalah %d ",n,p,hasil);
    return 0;
}
